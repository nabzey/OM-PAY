{
    "openapi": "3.0.0",
    "info": {
        "title": "API Comptes",
        "description": "API pour la gestion des comptes",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Serveur de développement"
        }
    ],
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Connexion utilisateur",
                "operationId": "a3b306d14572d1f4bd6c064b3233e7b8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 31536000
                                        },
                                        "access_token": {
                                            "type": "string"
                                        },
                                        "refresh_token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Identifiants invalides"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Déconnexion utilisateur",
                "operationId": "fe8f3429cd6979b3b4517e186505f9f9",
                "responses": {
                    "200": {
                        "description": "Déconnexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Déconnexion réussie"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non authentifié"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/api/client": {
            "get": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Informations du client connecté",
                "operationId": "9f1c53ceee113e04ff7709c819ce9bf5",
                "responses": {
                    "200": {
                        "description": "Informations client",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Compte"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non authentifié"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/api/refresh": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Rafraîchir le token d'accès",
                "operationId": "2c27d311a2876560fcb5a754b556cdc5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "refresh_token"
                                ],
                                "properties": {
                                    "refresh_token": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token rafraîchi",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 31536000
                                        },
                                        "access_token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/comptes": {
            "post": {
                "tags": [
                    "Comptes"
                ],
                "summary": "Créer un nouveau compte Orange Money",
                "operationId": "d46221922144c672a4a500c7f3755629",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "id_client",
                                    "numero_compte",
                                    "nom",
                                    "email",
                                    "telephone",
                                    "password"
                                ],
                                "properties": {
                                    "id_client": {
                                        "type": "string",
                                        "example": "CLI001"
                                    },
                                    "numero_compte": {
                                        "type": "string",
                                        "example": "OM001234567890"
                                    },
                                    "nom": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john@example.com"
                                    },
                                    "telephone": {
                                        "type": "string",
                                        "example": "77 123 45 67"
                                    },
                                    "type_compte": {
                                        "type": "string",
                                        "enum": [
                                            "courant",
                                            "epargne",
                                            "entreprise"
                                        ],
                                        "example": "courant"
                                    },
                                    "statut_compte": {
                                        "type": "string",
                                        "enum": [
                                            "actif",
                                            "inactif",
                                            "bloque",
                                            "suspendu"
                                        ],
                                        "example": "actif"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Compte créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CompteResource"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CompteResource": {
                "title": "Compte Resource",
                "description": "Ressource représentant un compte Orange Money formaté",
                "properties": {
                    "id": {
                        "description": "ID du compte",
                        "type": "integer"
                    },
                    "id_client": {
                        "description": "ID unique du client",
                        "type": "string"
                    },
                    "numero_compte": {
                        "description": "Numéro unique du compte",
                        "type": "string"
                    },
                    "nom": {
                        "description": "Nom du compte",
                        "type": "string"
                    },
                    "email": {
                        "description": "Email du compte",
                        "type": "string",
                        "format": "email"
                    },
                    "telephone": {
                        "description": "Numéro de téléphone",
                        "type": "string"
                    },
                    "type_compte": {
                        "description": "Type de compte",
                        "type": "string",
                        "enum": [
                            "courant",
                            "epargne",
                            "entreprise"
                        ]
                    },
                    "statut_compte": {
                        "description": "Statut du compte",
                        "type": "string",
                        "enum": [
                            "actif",
                            "inactif",
                            "bloque",
                            "suspendu"
                        ]
                    },
                    "created_at": {
                        "description": "Date de création",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Date de mise à jour",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Compte": {
                "title": "Compte",
                "description": "Modèle représentant un compte utilisateur",
                "properties": {
                    "id": {
                        "description": "ID du compte",
                        "type": "integer"
                    },
                    "id_client": {
                        "description": "ID unique du client",
                        "type": "string"
                    },
                    "numero_compte": {
                        "description": "Numéro unique du compte",
                        "type": "string"
                    },
                    "nom": {
                        "description": "Nom du compte",
                        "type": "string"
                    },
                    "email": {
                        "description": "Email du compte",
                        "type": "string",
                        "format": "email"
                    },
                    "telephone": {
                        "description": "Numéro de téléphone Orange Money",
                        "type": "string"
                    },
                    "type_compte": {
                        "description": "Type de compte",
                        "type": "string",
                        "enum": [
                            "courant",
                            "epargne",
                            "entreprise"
                        ]
                    },
                    "statut_compte": {
                        "description": "Statut du compte",
                        "type": "string",
                        "enum": [
                            "actif",
                            "inactif",
                            "bloque",
                            "suspendu"
                        ]
                    },
                    "password": {
                        "description": "Mot de passe hashé",
                        "type": "string"
                    },
                    "created_at": {
                        "description": "Date de création",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Date de mise à jour",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "oauth2",
                "flows": {
                    "password": {
                        "tokenUrl": "http://localhost:8000/api/login",
                        "refreshUrl": "http://localhost:8000/api/login",
                        "scopes": {}
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Authentification",
            "description": "Authentification"
        },
        {
            "name": "Comptes",
            "description": "Comptes"
        }
    ]
}